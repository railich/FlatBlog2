<p id="notice"><%= notice %></p>

<p>
  <b>Category:</b>
  <%= @article.category_id %>
</p>

<p>
  <b>User:</b>
  <%= @article.user_id %>
</p>

<p>
  <b>Title:</b>
  <%= @article.title %>
</p>

<p>
  <b>Body:</b>
  <%= @article.body %>
</p>

<p>
  <b>Url:</b>
  <%= @article.url %>
</p>

<p>
  <b>Tags:</b>
  <%= @article.tags %>
</p>


<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>


<h3><%= @comments.count %> <%= Pluralize(@comments.count, "comment") %> on <%= @article.title %></h3>
<ul id='comment_list'>
  <% @comments.each do |comment| %>
    <li>
      <span><%= comment.name %></span>
      said <%= comment.created_at %>
      <p><%= comment.body %></p>
    </li>
  <% end %>
</ul>
<div id="writecomment">
  render 'comment_form'
</div>