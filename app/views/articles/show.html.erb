<ul id='function_panel'>
  <li><%= link_to 'Back to articles', articles_path %></li>
</ul>
<h3><%= @article.title %></h3>
<p>Category <%= @category.name %>. Posted <%= @article.created_at %></p>
<p><%= @article.body %></p>

<ul id="article_panel">
  <li><%= link_to 'Edit', edit_article_path(@article) %></li>
  <li>url: <%= @article.url %></li>
  <li>tags: <%= @article.tags %></li>
</ul>

<h4><%= pluralize(@comments.size, "comment") %> on <%= @article.title %></h4>
<ul id="comment_list"><%=render @comments %></ul>
<div id="writecomment">
  <%= render 'comment_form' %>
</div>

